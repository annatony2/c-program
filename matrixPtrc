#include<stdio.h>
#include<stdlib.h>
int main (){
  int **matrix;
  int row =3 ,cols=5;
  matrix=(int *)malloc(rows*sizeof(int *));
  for (int i=0;i<row;i++){
    matrix[i]=(int *)malloc(cols*sizeof(int  *));
  }
  printf("\nEnter the elements : "){
  for(int i=0;i<rows,i++){
    for(int j=0;j<cols,j++){
      scanf("%d,(*(matrix+i)+j));
    }
  }
  printf("\nThe elements are : "){
  for(int i=0;i<rows,i++){
    for(int j=0;j<cols,j++){
      printf("%d ,*(*(matrix+i)+j));
    }
    printf("\n");
  }
return 0;
}
